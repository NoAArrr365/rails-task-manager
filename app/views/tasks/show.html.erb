<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<input type="checkbox" name="Task done"
<%= @task.completed ? 'checked' : ''%>/>

<%= link_to "Edit a task", edit_path %>
<%= link_to "Delete a task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%= link_to 'Go Back', tasks_path %>

